<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.skcc.netzero.sample.mapper.SampleDao">

    <select id="getUserList" resultType="map" parameterType="map"> 
        SELECT 
            username, password
        FROM 
            user_mst
    </select>

    <select id="getCodeTreeList" resultType="map" parameterType="map"> 
        SELECT CODE_CD
             , CODE_NM
             , P_CODE_CD
             , DSP_ORDER
             , EXP_FR_DT
             , EXP_TO_DT
             , USE_YN
          FROM CMN_CODE
         ORDER BY P_CODE_CD, DSP_ORDER
    </select>

    <select id="getCodeList" resultType="map" parameterType="map"> 
        SELECT CODE_CD
             , CODE_NM
             , P_CODE_CD
             , DSP_ORDER
             , EXP_FR_DT
             , EXP_TO_DT
             , USE_YN
          FROM CMN_CODE
         ORDER BY P_CODE_CD, DSP_ORDER
    </select>
</mapper>